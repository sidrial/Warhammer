@model Warhammer.Application.Models.PlayerViewModels.PlayersViewModel

<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong style="line-height: 2.5em; font-size: 14px">SPELERS</strong>
                </div>
                <div class="card-body">
                    <table id="merchants" class="table table-sm table-hover table-outline mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>Rank</th>
                                <th>Speler</th>
                                <th>Rating</th>
                            </tr>
                        </thead>
                        <tbody>                        
                        @for (int i = 0; i < Model.Players.Count; i++)
                        {
                            <tr>
                                <td>@(i+1)</td>
                                <td>@Model.Players[i].Name</td>
                                <td>@Model.Players[i].Rating</td>
                            </tr>
                        }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>