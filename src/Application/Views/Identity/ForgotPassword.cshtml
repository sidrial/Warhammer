@model Warhammer.Application.Models.IdentityViewModels.ForgotPasswordViewModel
@{
    Layout = "_IdentityLayout";
    ViewData["Title"] = @Warhammer.Application.Resources.Identity.ResetPassword;
}

<div class="card-body p-4">
    <form asp-action="ForgotPassword" method="post">
        <h1>@ViewData["Title"]</h1>
        <p class="text-muted">@Warhammer.Application.Resources.Identity.EnterYourEmail</p>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">@@</span>
            </div>
            <input asp-for="Email" class="form-control" placeholder="@Warhammer.Application.Resources.Identity.Email" autofocus="autofocus"  />
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>

        <button type="submit" class="btn btn-primary px-4">@Warhammer.Application.Resources.Identity.Submit</button>
    </form>
</div>