@model Warhammer.Application.Models.IdentityViewModels.RegisterViewModel

@{
    Layout = "_IdentityLayout";
}

<div class="card-body p-6">
    <form method="post" novalidate="novalidate" class="m-0">
        <h1>@Warhammer.Application.Resources.Identity.Register</h1>
        <p class="text-muted">@Warhammer.Application.Resources.Identity.RegisterYourAccount</p>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">@@</span>
                </div>
                <input class="form-control" placeholder="@Warhammer.Application.Resources.Identity.Email" type="email" data-val="true"
                       data-val-email="@Warhammer.Application.Resources.Identity.TheEmailFieldIsNotAValidEMailAddress"
                       data-val-required="@Warhammer.Application.Resources.Identity.TheEmailFieldIsRequired" asp-for="Email"
                       autofocus="autofocus">
            </div>

            <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="icon-user"></i></span>
                </div>
                <input class="form-control" placeholder="Speler naam" type="text" data-val="true"
                       data-val-required="Naam is verplicht" asp-for="PlayerName"
                       autofocus="autofocus">
            </div>

            <span class="text-danger field-validation-valid" data-valmsg-for="PlayerName" data-valmsg-replace="true"></span>
        </div>
        
        <div class="text-muted small">
            <div>- @Warhammer.Application.Resources.Identity.PasswordMinimumCharacters</div>
            <div>- @Warhammer.Application.Resources.Identity.PasswordMustHaveAtLeastOneLowercaseAZ</div>
            <div>- @Warhammer.Application.Resources.Identity.PasswordMustHaveAtLeastOneUppercaseAZ</div>
            <div>- @Warhammer.Application.Resources.Identity.PasswordMustHaveAtLeastOneDigit09</div>
            <div>- @Warhammer.Application.Resources.Identity.PasswordMustHaveAtLeastOneNonAlphanumericCharacter</div>
        </div>

        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="icon-lock"></i></span>
                </div>
                <input class="form-control" placeholder="@Warhammer.Application.Resources.Identity.Password" type="password" data-val="true"
                       data-val-required="@Warhammer.Application.Resources.Identity.ThePasswordFieldIsRequired" asp-for="Password">
            </div>

            <span class="text-danger field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="icon-lock"></i></span>
                </div>
                <input class="form-control" placeholder="Confirm Password" type="password" data-val="true"
                       data-val-required="@Warhammer.Application.Resources.Identity.ThePasswordFieldIsRequired" asp-for="ConfirmPassword">
            </div>

            <span class="text-danger field-validation-valid" data-valmsg-for="ConfirmPassword" data-valmsg-replace="true"></span>
        </div>
        <div class="row">
            <div class="col-4">
                <button type="submit" class="btn btn-primary px-4">@Warhammer.Application.Resources.Identity.Submit</button>
            </div>
        </div>
    </form>
</div>