@model Warhammer.Application.Models.IdentityViewModels.LoginViewModel

@{
    Layout = "_IdentityLayout";
}

<div class="card-body p-4">
    <form method="post" novalidate="novalidate" class="m-0">
        <h1>@Warhammer.Application.Resources.Identity.Login</h1>
        <p class="text-muted">@Warhammer.Application.Resources.Identity.SignInToYourAccount</p>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">@@</span>
                </div>
                <input class="form-control" placeholder="@Warhammer.Application.Resources.Identity.Email" type="email" data-val="true" 
                       data-val-email="@Warhammer.Application.Resources.Identity.TheEmailFieldIsNotAValidEMailAddress" 
                       data-val-required="@Warhammer.Application.Resources.Identity.TheEmailFieldIsRequired" asp-for="Email"
                       autofocus="autofocus">
            </div>

            <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="icon-lock"></i></span>
                </div>
                <input class="form-control" placeholder="@Warhammer.Application.Resources.Identity.Password" type="password" data-val="true" 
                       data-val-required="@Warhammer.Application.Resources.Identity.ThePasswordFieldIsRequired" asp-for="Password">
            </div>

            <span class="text-danger field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
        </div>
        <div class="row">
            <div class="col-4">
                <button type="submit" class="btn btn-primary px-4">@Warhammer.Application.Resources.Identity.LogInSubmit</button>
            </div>
            <div class="col-8 text-right">
                <div class="checkbox pt-2">
                    <label for="RememberMe">
                        <input type="checkbox" id="RememberMe" name="RememberMe" value="true">
                        @Warhammer.Application.Resources.Identity.RememberMe
                    </label>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="card-footer p-4 text-center">
    <a href="@Url.Action("ForgotPassword")">@Warhammer.Application.Resources.Identity.ForgotYourPassword</a>
</div>