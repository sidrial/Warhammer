@model Warhammer.Application.Models.UserViewModels.UserViewModel

<div class="animated fadeIn">
    <div class="row">
        <form asp-action="EditPost" method="post" class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong style="line-height: 2.5em; font-size: 14px">@(string.IsNullOrEmpty(Model.Email) ? @Warhammer.Application.Resources.User.CreateNewUser : @Warhammer.Application.Resources.User.UserDetails)</strong>
                    <button type="submit" class="pull-right btn btn-primary">@Warhammer.Application.Resources.User.Save</button>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3 row">
                                <label class="col-sm-3 col-9 col-lg-2 col-form-label" asp-for="IsActive">Player is active</label>
                                <div class="col-sm-9 col-3 col-lg-10 input-group">
                                    <input type="checkbox" asp-for="IsActive" class="mt-2" />
                                </div>
                            </div>

                            <div class="form-group row mb-3">
                                <label class="col-md-3 col-lg-2 col-form-label" asp-for="Email">@Warhammer.Application.Resources.User.Email</label>
                                <div class="col-md-9 col-lg-10 input-group">
                                    <label class="input-group-prepend" asp-for="Email">
                                        <span class="input-group-text">@@</span>
                                    </label>
                                    <input type="text" asp-for="Email" class="form-control" placeholder="@Warhammer.Application.Resources.User.Email" />
                                </div>
                            </div>
                            
                            <div class="form-group row mb-3">
                                <label class="col-md-3 col-lg-2 col-form-label" asp-for="PlayerName">Player Name</label>
                                <div class="col-md-9 col-lg-10 input-group">
                                    <label class="input-group-prepend" asp-for="PlayerName">
                                        <span class="input-group-text">@@</span>
                                    </label>
                                    <input type="text" asp-for="PlayerName" class="form-control" placeholder="Player Name" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>