@model Warhammer.Application.Models.UserViewModels.UsersViewModel;

<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong style="line-height: 2.5em; font-size: 14px">@Warhammer.Application.Resources.User.Users</strong>
                </div>
                <div class="card-body">
                    <table class="table table-responsive-sm table-hover table-outline mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th>@Warhammer.Application.Resources.User.CreatedOn <i class="fa fa-arrow-circle-down"></i></th>
                                <th>@Warhammer.Application.Resources.User.LastUpdatedOn</th>
                                <th>@Warhammer.Application.Resources.User.Email</th>
                                <th>Player Name</th>
                                <th>@Warhammer.Application.Resources.User.Active</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users.OrderByDescending(user => user.CreationDateTime))
                            {
                                <tr>
                                    <td>
                                        @user.CreationDateTime.ToString("f")
                                    </td>
                                    <td>
                                        @user.UpdateDateTime.ToString("f")
                                    </td>
                                    <td>
                                        @user.Email
                                    </td>
                                    <td>
                                        @user.Player.Name
                                    </td>
                                    <td>
                                        @(user.IsActive ?
                                          Html.Raw("<i class=\"icon-check text-success\"></i>") :
                                          Html.Raw("<i class=\"icon-close text-danger\"></i>"))
                                    </td>
                                    <td><a href="@Url.Action("Edit", new { userGuid = user.Id })" class="pull-right btn btn-sm btn-outline-primary">@Warhammer.Application.Resources.User.Edit</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>