@model Warhammer.Application.Models.TournamentViewModels.CreatePlayerViewModel
<form asp-controller="Tournaments" asp-action="RecreateLastRound" method="post">
    @Html.HiddenFor(m => m.TournamentId);

    <div class="modal fade" id="recreateRoundModal" tabindex="-1" role="dialog" aria-labelledby="recreateRoundModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="matchModalLabel">Recreate last round (shuffle pairings)</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Weet je zeker dat je de laatste ronde wilt re-pairen?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Warhammer.Application.Resources.Global.Close</button>
                    <button type="submit" class="btn btn-primary">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</form>