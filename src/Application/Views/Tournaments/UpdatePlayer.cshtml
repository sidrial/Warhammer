@model Warhammer.Application.Models.TournamentViewModels.UpdatePlayerViewModel

<div class="animated fadeIn">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong style="line-height: 2.5em; font-size: 14px">Info voor @Model.PlayerName</strong>
                </div>
                <form asp-controller="Tournaments" asp-action="UpdatePlayer" method="post">
                    <div>
                        <input type="hidden" data-val="true" asp-for="PlayerId" value="@Model.PlayerId">
                        <input type="hidden" data-val="true" asp-for="TournamentId" value="@Model.TournamentId">
                    <div class="modal-body">
                        <div class="form-group">
                            <div class="form-group">
                                <br />

                                <div class="form-group">
                                    <span asp-validation-for="Club" class="text-danger"></span>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span asp-label-for="" class="input-group-text">Club name</span>
                                        </div>
                                        <input class="form-control" type="text" data-val="true" asp-for="@Model.Club" autofocus="autofocus">
                                    </div>
                                </div>
                            

                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span asp-label-for="" class="input-group-text">Primary faction</span>
                                        </div>
                                        <select asp-for="PrimaryFaction" asp-items="@Model.FactionsDropDown" class="form-control">
                                            <option value="">Select faction</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <span asp-validation-for="ArmyList" class="text-danger"></span>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span asp-label-for="" class="input-group-text">Army list</span>
                                        </div>
                                        @Html.TextAreaFor(model => model.ArmyList, 10,40, htmlAttributes: new {style="width: 100%; max-width: 100%;" })
                                    </div>
                                </div>
                            

                                <div class="form-group">
                                    <span asp-validation-for="PinNumber" class="text-danger"></span>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span asp-label-for="" class="input-group-text">PIN</span>
                                        </div>
                                        <input class="form-control" type="number" data-val="true" asp-for="@Model.PinNumber" autofocus="autofocus">
                                    </div>
                                </div>
                                <br/>
                            </div>
                    
                                <div>
                                    <button type="submit" class="btn btn-primary">Opslaan</button>
                                </div>
                        </div>
                    </div>
                       
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>